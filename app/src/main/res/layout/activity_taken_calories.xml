<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/main_width"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食べた物"/>
                <EditText
                    android:id="@+id/edit_eaten_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="カロリー"/>
                <EditText
                    android:id="@+id/edit_calorie"
                    android:layout_width="80dp"
                    android:inputType="number"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <Spinner
                    android:id="@+id/spinner_when"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:entries="@array/list_taken_calories_when"
                    android:spinnerMode="dialog"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/main_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <Spinner
                android:id="@+id/spinner_num"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:entries="@array/list_taken_calories_num"
                android:spinnerMode="dialog"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="個"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_search_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:theme="@style/AppTheme.RaisedButton"
                android:text="カロリーを検索"/>
            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.RaisedButton"
                android:layout_marginRight="8dp"
                android:text="追加"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="@dimen/main_width"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/main_width"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="@dimen/main_width"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_height="24dp"
                    android:background="#555"
                    android:textColor="#FFF"
                    android:text="今日食べた物"/>
                <net.dixq.caloriemanager.common.MesuredListView
                    android:id="@+id/list_taken_today"
                    android:minHeight="180dp"
                    android:layout_width="@dimen/main_width"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="@dimen/main_width"
                    android:layout_height="16dp"
                    />
                <TextView
                    android:layout_width="@dimen/main_width"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_height="24dp"
                    android:background="#555"
                    android:textColor="#FFF"
                    android:text="履歴"/>
                <net.dixq.caloriemanager.common.MesuredListView
                    android:id="@+id/list_taken_history"
                    android:minHeight="180dp"
                    android:layout_width="@dimen/main_width"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
<!--
    <include layout="@layout/drawer_list" android:id="@+id/drawer"/>
-->
</android.support.v4.widget.DrawerLayout>